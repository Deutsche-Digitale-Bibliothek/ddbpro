<div class="content-header__bottom">
  <div class="content-header__content">
    <div class="content-header__title">
      <h1>{{ title }}</h1>
    </div>

    {% if text %}
      <div class="content-header__text">
        <p class="h4">{{ text }}</p>
      </div>
    {% endif %}

    {% if link %}
      <div class="content-header__link">
        <a href="#node-form" class="button button--primary">
          <span>{{ 'Kontakt aufnehmen' | t }}</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>
