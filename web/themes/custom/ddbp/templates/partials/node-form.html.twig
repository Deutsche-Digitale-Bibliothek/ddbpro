<div class="node-form" id="node-form">
  <div class="container">
    <div class="row">
      <div class="column column--span-2">
        <h2 class="tiny-label">
          {{ 'Kontakt' | t }}
        </h2>
      </div>
      <div class="column column--span-10">
        <div class="row">
          <div class="column node-form__form">
            {{ form }}
          </div>
          {% if people[0] %}
            <div class="column node-form__people">
              <h3 class="h4">{{ 'Ansprechpartner*innen' | t }}</h3>
              {{ people }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
