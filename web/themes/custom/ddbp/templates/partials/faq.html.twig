{% set faq = get_faq(id, deep) %}

{% if faq.items|length %}
  <div class="faq-section">
    <div class="container">
      <div class="row">
        <div class="column column--span-2">
          <div class="tiny-label">
            {{ 'Faq' | t }}
          </div>
        </div>
        <div class="column column--span-10">
          <div class="faq-section__content">
            <div class="faq-section__headline">
              <h2>
                {{ 'HÃ¤ufig gestellte Fragen' | t }}<br>
                {{ faq.term }}
              </h2>
            </div>
            <div class="faq-section__accordions">
              <div class="accordion-wrapper">
                <div class="accordion__top">
                  <button class="accordion__open-all">
                    <span class="open">
                      {{ 'Alle aufklappen' | t }}
                    </span>
                    <span class="close">
                      {{ 'Alle einklappen' | t }}
                    </span>
                  </button>
                </div>

                {% for item in faq.items %}
                  {% set accordion = {
                    type: 'faq',
                    title: item.title,
                    text: item.content,
                  } %}

                  {% include '@ddbp/partials/accordion.html.twig' with accordion %}
                {% endfor %}
              </div>
            </div>

            <div class="faq-section__all">
              <a href="{{ path('view.faq.faq') }}"
                class="button button--primary faq-section__all-link">
                <span>{{ 'Alle Fragen & Antworten' | t }}</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
