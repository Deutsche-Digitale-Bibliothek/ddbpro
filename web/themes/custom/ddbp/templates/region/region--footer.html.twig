<div id="footer-copyright" class="footer__copyright" style="display: none;">
  <div class="copyright">
    <div class="container">
      <button class="copyright__header"
        aria-expanded="false"
        aria-controls="copyright-items">
        {{ 'Informationen über die auf dieser Seite verwendeten Bilder' | t }}
      </button>
      <div id="copyright-items" class="copyright__content" aria-hidden="true">
        <div class="copyright__items"></div>
      </div>
    </div>
  </div>
</div>

<div class="footer__top">
  <div class="container">
    <div class="row">
      <div class="footer__menu">
        {{ drupal_menu('footer') }}
      </div>
      <div class="footer__info">
        <!--
        <p class="h3">
          {{- 'DDBpro, das Portal für Datenpartner der Deutschen Digitalen Bibliothek.' | t -}}
        </p>
        -->
        <div class="footer__socials">
          <p class="h3">{{- 'Folgen Sie der Deutschen Digitalen Bibliothek:' | t -}}</p>
          <ul>
            <li>
              <a href="https://openbiblio.social/web/@ddbkultur" target="_blank">
                <i class="fa-brands fa-mastodon"></i>
                <span class="visually-hidden">{{ 'Mastodon' | t }}</span>
              </a>
            </li>
            <li>
              <a href="https://www.linkedin.com/company/deutsche-digitale-bibliothek" target="_blank">
                <i class="fa-brands fa-linkedin"></i>
                <span class="visually-hidden">{{ 'LinkedIn' | t }}</span>
              </a>
            </li>
            <li>
              <a href="https://www.facebook.com/ddbkultur/" target="_blank">
                <i class="fa-brands fa-facebook-f"></i>
                <span class="visually-hidden">{{ 'Facebook' | t }}</span>
              </a>
            </li>
            <li>
              <a href="https://www.instagram.com/ddbkultur/" target="_blank">
                <i class="fa-brands fa-instagram"></i>
                <span class="visually-hidden">{{ 'Instagram' | t }}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer__bottom">
  <div class="container">
    <ul class="footer__logos">
      <li class="footer__logo">
        <a href="https://www.deutsche-digitale-bibliothek.de/" target="_blank">
          <img src="/{{ directory }}/src/images/logos/DDB_Logo_2_s_pos_RGB_R.svg"
            alt="{{ 'Logo der Deutschen Digitalen Bibliothek' | t }}">
        </a>
      </li>
      <li class="footer__logo">
        <a href="https://www.deutsche-digitale-bibliothek.de/newspaper" target="_blank">
          <img src="/{{ directory }}/src/images/logos/DZP_Logo_RGB_Reduziert.svg"
            alt="{{ 'Logo des Zeitungsportals' | t }}">
        </a>
      </li>
      <li class="footer__logo">
        <a href="https://ccc.deutsche-digitale-bibliothek.de/" target="_blank">
          <img src="/{{ directory }}/src/images/logos/CCC_Logo_RGB.svg"
            alt="{{ 'Logo des Portals „Sammlungsgut aus kolonialen Kontexten“' | t }}">
        </a>
      </li>
      <li class="footer__logo">
        <a href="https://www.archivportal-d.de/" target="_blank">
          <img src="/{{ directory }}/src/images/logos/APD-Logo-2022.svg"
            alt="{{ 'Logo des Archivportal-Ds' | t }}">
        </a>
      </li>
    </ul>
  </div>
</div>
