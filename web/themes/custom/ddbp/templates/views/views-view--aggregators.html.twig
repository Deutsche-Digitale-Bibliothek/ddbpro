{% set classes = [
  'view',
  'view-' ~ id|clean_class,
  'view-id-' ~ id,
  'view-display-id-' ~ display_id,
  dom_id ? 'js-view-dom-id-' ~ dom_id,
] %}

{% set viewHeader = {
  title: 'Aggregatorenportraits' | t,
  text: 'Hier finden Sie Portraits der Aggregatoren, die bereits mit der Deutschen Digitalen Bibliothek zusammenarbeiten.' | t
} %}

<div{{ attributes.addClass(classes) }}>

  {# view header #}
  {% include '@ddbp/partials/view-header.html.twig' with viewHeader %}

  {% if exposed %}
    <div class="view-filters">
      {{ exposed }}
    </div>
  {% endif %}

  <div class="container">
    {% if rows %}
      <div class="view-content">
        {{ rows }}
      </div>
      {% if pager %}
        {{ pager }}
      {% endif %}
    {% else %}
      {% include '@ddbp/views/view-empty.html.twig' %}
    {% endif %}
  </div>
</div>
